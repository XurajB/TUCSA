<h1>Listing ratings</h1>

<table>
  <tr>
    <th>Recommendation</th>
    <th>Intellect</th>
    <th>Leadership</th>
    <th>Written</th>
    <th>Verbal</th>
    <th>Reliability</th>
    <th>Timeliness</th>
    <th>Maturity</th>
    <th>Skill</th>
    <th>Commitment</th>
    <th>Independent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ratings.each do |rating| %>
  <tr>
    <td><%= rating.recommendation_id %></td>
    <td><%= rating.intellect %></td>
    <td><%= rating.leadership %></td>
    <td><%= rating.written %></td>
    <td><%= rating.verbal %></td>
    <td><%= rating.reliability %></td>
    <td><%= rating.timeliness %></td>
    <td><%= rating.maturity %></td>
    <td><%= rating.skill %></td>
    <td><%= rating.commitment %></td>
    <td><%= rating.independent %></td>
    <td><%= link_to 'Show', rating %></td>
    <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
    <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

