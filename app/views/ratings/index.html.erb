<%- model_class = Rating -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:recommendation_id) %></th>
      <th><%= model_class.human_attribute_name(:intellect) %></th>
      <th><%= model_class.human_attribute_name(:leadership) %></th>
      <th><%= model_class.human_attribute_name(:written) %></th>
      <th><%= model_class.human_attribute_name(:verbal) %></th>
      <th><%= model_class.human_attribute_name(:reliability) %></th>
      <th><%= model_class.human_attribute_name(:timeliness) %></th>
      <th><%= model_class.human_attribute_name(:maturity) %></th>
      <th><%= model_class.human_attribute_name(:skill) %></th>
      <th><%= model_class.human_attribute_name(:commitment) %></th>
      <th><%= model_class.human_attribute_name(:independent) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= link_to rating.id, rating_path(rating) %></td>
        <td><%= rating.recommendation_id %></td>
        <td><%= rating.intellect %></td>
        <td><%= rating.leadership %></td>
        <td><%= rating.written %></td>
        <td><%= rating.verbal %></td>
        <td><%= rating.reliability %></td>
        <td><%= rating.timeliness %></td>
        <td><%= rating.maturity %></td>
        <td><%= rating.skill %></td>
        <td><%= rating.commitment %></td>
        <td><%= rating.independent %></td>
        <td><%=l rating.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_rating_path(rating), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      rating_path(rating),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_rating_path,
            :class => 'btn btn-primary' %>
