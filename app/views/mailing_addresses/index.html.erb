<%- model_class = MailingAddres -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:line1) %></th>
      <th><%= model_class.human_attribute_name(:line2) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state_id) %></th>
      <th><%= model_class.human_attribute_name(:zip) %></th>
      <th><%= model_class.human_attribute_name(:cs_application_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @mailing_addresses.each do |mailing_address| %>
      <tr>
        <td><%= link_to mailing_address.id, mailing_address_path(mailing_address) %></td>
        <td><%= mailing_address.name %></td>
        <td><%= mailing_address.line1 %></td>
        <td><%= mailing_address.line2 %></td>
        <td><%= mailing_address.city %></td>
        <td><%= mailing_address.state_id %></td>
        <td><%= mailing_address.zip %></td>
        <td><%= mailing_address.cs_application_id %></td>
        <td><%=l mailing_address.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mailing_address_path(mailing_address), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mailing_address_path(mailing_address),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mailing_address_path,
            :class => 'btn btn-primary' %>
