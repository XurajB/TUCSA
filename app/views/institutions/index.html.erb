<%- model_class = Institution -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:institution) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state_id) %></th>
      <th><%= model_class.human_attribute_name(:attended_from) %></th>
      <th><%= model_class.human_attribute_name(:attended_to) %></th>
      <th><%= model_class.human_attribute_name(:degree) %></th>
      <th><%= model_class.human_attribute_name(:cs_application_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= link_to institution.id, institution_path(institution) %></td>
        <td><%= institution.institution %></td>
        <td><%= institution.city %></td>
        <td><%= institution.state_id %></td>
        <td><%= institution.attended_from %></td>
        <td><%= institution.attended_to %></td>
        <td><%= institution.degree %></td>
        <td><%= institution.cs_application_id %></td>
        <td><%=l institution.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_institution_path(institution), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      institution_path(institution),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_institution_path,
            :class => 'btn btn-primary' %>
