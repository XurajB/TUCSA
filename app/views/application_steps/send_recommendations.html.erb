<%= form_for @cs_application, url: wizard_path, :html => { :class => 'form-horizontal' }  do |f|  %>

	<h1>Send Invitations for Recommendation</h1>
	
	<%= fields_for @recommendation do |recommendation|%>
	<div class="control-group">
		<%= recommendation.label :name, :class => 'control-label' %>
		<div class="controls">
			<%= recommendation.text_field :name, :class => 'text_field' %>
		</div>
	</div>
	<div class="control-group">
		<%= recommendation.label :title, :class => 'control-label' %>
		<div class="controls">
			<%= recommendation.text_field :title, :class => 'text_field' %>
		</div>
	</div>
	<div class="control-group">
		<%= recommendation.label :email, :class => 'control-label' %>
		<div class="controls">
			<%= recommendation.text_field :email, :class => 'text_field' %><%= link_to 'Send' %>
		</div>
	</div>
	
	<%end%>
	<div class="form-actions">
		<%= f.submit "Next", :class => 'btn btn-primary' %>
		<%= link_to t('.cancel', :default => t("helpers.links.cancel")), cs_applications_path, :class => 'btn' %>
	</div>

<% end%>